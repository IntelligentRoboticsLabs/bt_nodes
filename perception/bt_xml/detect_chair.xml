<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <ReactiveFallback>
                <Condition ID="IsDetected" best_detection="" cam_frame="head_front_camera_link" confidence="0.6" frame="{a_ball}" interest="chair" max_depth="50" max_entities="1" order="depth"/>
                <Action ID="Spin" angle="-1" direction="-1" speed="0.8"/>
            </ReactiveFallback>
            <Action ID="NavigateTo" distance_tolerance="0.0" tf_frame="{a_ball}" will_finish="true" x="" y=""/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="IdentifyPerson">
            <input_port name="get_features"/>
            <input_port name="person_to_identify"/>
        </Action>
        <Condition ID="IsDetected">
            <output_port name="best_detection"/>
            <input_port default="head_front_camera_link" name="cam_frame"/>
            <input_port default="0.6" name="confidence"/>
            <output_port name="frame"/>
            <input_port default="person" name="interest"/>
            <input_port default="2" name="max_depth"/>
            <input_port default="1" name="max_entities"/>
            <input_port default="depth" name="order"/>
        </Condition>
        <Action ID="IsPointing">
            <input_port name="camera_frame"/>
            <input_port name="high_pointing_limit"/>
            <input_port name="low_pointing_limit"/>
            <input_port name="output_frame"/>
            <output_port name="pointing_direction"/>
        </Action>
        <Action ID="NavigateTo">
            <input_port name="distance_tolerance">How far from the target</input_port>
            <input_port name="tf_frame">Where to navigate</input_port>
            <input_port name="will_finish">False in case it is navigating to follow something</input_port>
            <input_port name="x"/>
            <input_port name="y"/>
        </Action>
        <Action ID="Spin">
            <input_port name="angle"/>
            <input_port default="-1" name="direction">1: left; -1: right</input_port>
            <input_port name="speed"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
